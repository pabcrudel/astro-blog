---
// Inspired on: https://github.com/withastro/astro/blob/main/examples/blog/src/components/BaseHead.astro

interface Props {
  title?: string;
  description?: string;
}

const { title = "Astro Blog", description = "Blog powered by Astro" } =
  Astro.props;

const faviconPath = import.meta.env.BASE_URL + "favicon.svg";
---

{/* Global Metadata */}
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href={faviconPath} />
<meta name="generator" content={Astro.generator} />

{/* Primary Meta Tags */}
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

{/* Canonical URL */}
<link rel="canonical" href={Astro.url} />
